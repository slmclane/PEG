<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:showIn="@layout/activity_landing_page"
    tools:context=".LandingPage"
    android:background="@drawable/radialback">


    <TextView android:text="Patient Exercise Guide" android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="50sp"
        android:textColor="#ccffff"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Recovery Tracker"
        android:id="@+id/button5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="goToRecovery"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hand Exercises"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:onClick="goToHand"/>

</RelativeLayout>


