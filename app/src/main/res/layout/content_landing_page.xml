<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:showIn="@layout/activity_landing_page"
    tools:context=".LandingPage"
    android:background="@drawable/radialback">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:text="Patient Exercise Guide" android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="64sp"
        android:textColor="#ccffff"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText android:id="@+id/edit_message"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_weight="0.85">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendMessage"
        android:text="@string/button_send"
        android:textColor="#FFFFFF"
        android:background="@drawable/button" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToRadialUlnarDeviation"
            android:background="@drawable/button"
            android:text="@string/title_activity_RadialUlnarDeviation"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goToFlexionExtension"
            android:background="@drawable/button"
            android:text="@string/title_activity_FlexionExtension"
            android:textColor="#FFFFFF"/>

            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToPronationSupination"
        android:background="@drawable/button"
        android:text="@string/title_activity_PronationSupination"
        android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
