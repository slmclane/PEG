<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:showIn="@layout/activity_landing_page"
    tools:context=".LandingPage"
    android:background="@drawable/radialback">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView android:text="Patient Exercise Guide" android:layout_width="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="64sp"
        android:textColor="#ccffff"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_careGuide"
            android:id="@+id/careGuideHeader"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#050089"
            android:textSize="20dp"
            android:layout_weight="0.85" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendMessage"
            android:text="@string/button_careGuide"
            android:textColor="#FFFFFF"
            android:background="@drawable/button"
            android:width="250dp"
            android:layout_margin="5dp"
            android:layout_weight="0.85" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_exercises"
            android:id="@+id/exercisesHeader"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#050089"
            android:textSize="20sp" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToFlexionExtension"
        android:background="@drawable/button"
        android:text="@string/title_activity_FlexionExtension"
        android:textColor="#FFFFFF"
        android:width="250dp" />

        <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="goToPronationSupination"
    android:background="@drawable/button"
    android:text="@string/title_activity_PronationSupination"
    android:textColor="#FFFFFF"
            android:width="250dp" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToRadialUlnarDeviation"
        android:background="@drawable/button"
        android:text="@string/title_activity_RadialUlnarDeviation"
        android:textColor="#FFFFFF"
        android:width="250dp" />
    </LinearLayout>

</LinearLayout>
