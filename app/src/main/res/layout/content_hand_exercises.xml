<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.strykermclane.peg.HandExercises"
    tools:showIn="@layout/activity_hand_exercises"
    android:background="@drawable/radialback">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pick an Exercise"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#050089"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radial Ulnar Deviation"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:width="250dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="goToRadialUlnarDeviation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronation Supination"
        android:id="@+id/button6"
        android:width="250dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="goToPronationSupination"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlexionExtension"
        android:id="@+id/button8"
        android:width="250dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button"
        android:onClick="goToFlexionExtension"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:src="@drawable/rad"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/imageView3"
        android:src="@drawable/pro"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/flex"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button8"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
