    <corners android:radius="10dip" />

    <gradient
        android:angle="90"
        android:centerColor="#0c2a46"
        android:centerY="0.4"
        android:endColor="#7c8ea5"
        android:startColor="#0c2a46"
        android:type="linear" />

    <padding
        android:bottom="5dip"
        android:left="10dip"
        android:right="10dip"
        android:top="5dip" />

    <stroke
        android:width="1dip"
        android:color="#222" />

</shape>